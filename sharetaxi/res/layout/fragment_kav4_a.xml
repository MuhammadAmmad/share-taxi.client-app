<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout_onTimesActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/egg_shell"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="yes"
    tools:context=".MainActivity" >

    <TableRow
        android:id="@+id/tableRow2_onTimesActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/egg_shell" >

        <ScrollView
            android:id="@+id/stockScrollView_onTimesActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp" >

            <!--
            android:stretchColumns Defines that you want 
            this component to expand in width to fit any extra 
            space
            -->

            <TableLayout
                android:id="@+id/stockTableScrollView_onTimesActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:stretchColumns="yes" >

                <TableRow
                    android:id="@+id/tableRow0_onTimesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/timesLineTextView_onTimesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10sp"
                        android:text="@string/scheduleLine_KAV4_A"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_line"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4_onTimesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" >

                    <TextView
                        android:id="@+id/tableRow_onTimesActivity5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="@string/schedule_KAV4_A"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow0_onTimesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/stationsTextView_onTimesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10sp"
                        android:text="@string/stationsLine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_line"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/SaturdayTableRow_onTimesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/SaturdayScheduleTextView_onTimesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="@string/stations_KAV4_A"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow0_onTimesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/stationsTextView_onTimesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10sp"
                        android:text="@string/stationsLine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_line"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3_onTimesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageButton
                        android:id="@+id/shareTaxiImageButton_onTimesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/descriptionShareTaxiImage"
                     
                        android:paddingBottom="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/map_kav4_a" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableRow>

</TableLayout>